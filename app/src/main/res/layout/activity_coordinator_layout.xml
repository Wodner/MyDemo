<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_main_theme"
        android:textColor="@color/white"
        android:layout_margin="@dimen/px_20"
        android:text="嵌入AppBarLayout"/>
    <Button
        android:id="@+id/btn_collapsing"
        android:layout_below="@id/btn_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_btn_main_theme"
        android:textColor="@color/white"
        android:layout_margin="@dimen/px_20"
        android:text="嵌入CollapsingToolbarLayout"/>
</RelativeLayout>